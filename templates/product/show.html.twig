{% extends "base.html.twig.html" %}


{% block title %}{{ product.name }} - La Boutique Française
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid" src="/uploads/{{ product.illustration }}" alt="{{ product.name }}">
        </div>
        <div class="col-md-7 my-auto">
	        <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <p class="product-page-price">{{ (product.price / 100)|number_format(2, ',','.') }}€</p>

            <hr>
            <p>
                {{ product.description}}            
            </p>
            <hr>
            <a href="#" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>



{% endblock %}

